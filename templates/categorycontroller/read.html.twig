{% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
    <h1>Category Details</h1>

    <p><strong>ID:</strong> {{ category.id }}</p>
    <p><strong>Name:</strong> {{ category.name }}</p>

    <a href="{{ path('category_edit', {id: category.id}) }}" class="btn btn-warning">✏️ Edit</a>

    <form method="post" action="{{ path('category_delete', {id: category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this category?');" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
        <button class="btn btn-danger">🗑️ Delete</button>
    </form>

    <br><br>
    <a href="{{ path('category_index') }}">⬅ Back to list</a>
{% endblock %}
